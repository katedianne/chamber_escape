<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sevennew"
    tools:context=".LevelSeven">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="506dp"
        android:layout_height="407dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/wiz"
            android:layout_width="76dp"
            android:layout_height="84dp"
            android:layout_marginTop="170dp"
            app:srcCompat="@drawable/idle" />

        <ImageView
            android:id="@+id/obs1"
            android:layout_width="116dp"
            android:layout_height="53dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="240dp"
            app:srcCompat="@drawable/obs3" />

        <ImageView
            android:id="@+id/obs2"
            android:layout_width="113dp"
            android:layout_height="50dp"
            android:layout_marginLeft="240dp"
            android:layout_marginTop="240dp"
            app:srcCompat="@drawable/obs3" />

        <ImageView
            android:id="@+id/obs3"
            android:layout_width="57dp"
            android:layout_height="114dp"
            android:layout_marginLeft="200dp"
            app:srcCompat="@drawable/obs2" />

        <ImageView
            android:id="@+id/plat1"
            android:layout_width="119dp"
            android:layout_height="35dp"
            android:layout_marginTop="260dp"
            android:src="@color/ic_launcher_background" />

        <ImageView
            android:id="@+id/plat2"
            android:layout_width="130dp"
            android:layout_height="295dp"
            android:layout_marginLeft="390dp"
            android:layout_marginTop="160dp"
            android:src="@color/ic_launcher_background" />

        <ImageView
            android:id="@+id/goal"
            android:layout_width="54dp"
            android:layout_height="87dp"
            android:layout_marginLeft="422dp"
            android:layout_marginTop="55dp"
            android:src="#000000" />

    </FrameLayout>

    <ImageView
        android:id="@+id/left"
        android:layout_width="43dp"
        android:layout_height="40dp"
        android:layout_marginTop="320dp"
        app:layout_constraintEnd_toStartOf="@+id/right"
        app:layout_constraintHorizontal_bias="0.014"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/left" />

    <ImageView
        android:id="@+id/right"
        android:layout_width="54dp"
        android:layout_height="49dp"
        android:layout_marginTop="313dp"
        app:layout_constraintEnd_toStartOf="@+id/frameLayout"
        app:layout_constraintStart_toEndOf="@+id/left"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/right" />

    <ImageView
        android:id="@+id/up"
        android:layout_width="55dp"
        android:layout_height="59dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="324dp"
        app:layout_constraintEnd_toStartOf="@+id/down"
        app:layout_constraintStart_toEndOf="@+id/frameLayout"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/up" />

    <ImageView
        android:id="@+id/down"
        android:layout_width="55dp"
        android:layout_height="68dp"
        android:layout_marginTop="324dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/up"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/down" />

</androidx.constraintlayout.widget.ConstraintLayout>