<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fournew"
    tools:context=".LevelFour">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="360dp"
        android:layout_height="407dp"
        android:layout_marginStart="198dp"
        android:layout_marginLeft="198dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/obs1"
            android:layout_width="156dp"
            android:layout_height="67dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="296dp"
            app:srcCompat="@drawable/obs3" />

        <ImageView
            android:id="@+id/plat1"
            android:layout_width="110dp"
            android:layout_height="300dp"
            android:layout_marginTop="112dp"
            android:src="@color/ic_launcher_background" />

        <ImageView
            android:id="@+id/plat2"
            android:layout_width="110dp"
            android:layout_height="200dp"
            android:layout_marginLeft="245dp"
            android:layout_marginTop="220dp"
            android:src="@color/ic_launcher_background" />

        <ImageView
            android:id="@+id/wiz"
            android:layout_width="63dp"
            android:layout_height="66dp"
            android:layout_marginLeft="270dp"
            android:layout_marginTop="150dp"
            app:srcCompat="@drawable/idle" />

        <ImageView
            android:id="@+id/goal"
            android:layout_width="50dp"
            android:layout_height="90dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            app:srcCompat="@android:color/background_dark" />

        <ImageView
            android:id="@+id/obs2"
            android:layout_width="70dp"
            android:layout_height="158dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="120dp"
            app:srcCompat="@drawable/obs2" />

    </FrameLayout>

    <ImageView
        android:id="@+id/left"
        android:layout_width="59dp"
        android:layout_height="29dp"
        android:layout_marginTop="338dp"
        app:layout_constraintEnd_toStartOf="@+id/right"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/left" />

    <ImageView
        android:id="@+id/right"
        android:layout_width="87dp"
        android:layout_height="63dp"
        android:layout_marginTop="319dp"
        app:layout_constraintEnd_toStartOf="@+id/frameLayout"
        app:layout_constraintStart_toEndOf="@+id/left"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/right" />

    <ImageView
        android:id="@+id/down"
        android:layout_width="54dp"
        android:layout_height="64dp"
        android:layout_marginTop="300dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/up"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/down" />

    <ImageView
        android:id="@+id/up"
        android:layout_width="50dp"
        android:layout_height="78dp"
        android:layout_marginTop="289dp"
        app:layout_constraintEnd_toStartOf="@+id/down"
        app:layout_constraintStart_toEndOf="@+id/frameLayout"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/up" />

</androidx.constraintlayout.widget.ConstraintLayout>