<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/onenew"
    tools:context=".LevelOne">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="376dp"
        android:layout_height="413dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/wizard"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="295dp"
            app:srcCompat="@drawable/idle" />

        <ImageView
            android:id="@+id/platform1"
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:layout_gravity="bottom"
            app:srcCompat="@color/colorPrimaryDark" />

        <ImageView
            android:id="@+id/obbslvl1"
            android:layout_width="47dp"
            android:layout_height="97dp"
            android:layout_marginTop="250dp"
            android:layout_marginLeft="230dp"
            app:srcCompat="@drawable/obs2" />

        <ImageView
            android:id="@+id/goal"
            android:layout_width="45dp"
            android:layout_height="105dp"
            android:layout_marginTop="115dp"
            android:layout_marginLeft="285dp"
            app:srcCompat="@android:color/background_dark" />

    </FrameLayout>

    <ImageView
        android:id="@+id/left"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="331dp"
        app:layout_constraintEnd_toStartOf="@+id/right"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/left" />

    <ImageView
        android:id="@+id/right"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="328dp"
        app:layout_constraintEnd_toStartOf="@+id/frameLayout"
        app:layout_constraintStart_toEndOf="@+id/left"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/right" />

    <ImageView
        android:id="@+id/up"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="344dp"
        app:layout_constraintEnd_toStartOf="@+id/down"
        app:layout_constraintStart_toEndOf="@+id/frameLayout"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/up" />

    <ImageView
        android:id="@+id/down"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="344dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/up"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/down" />


</androidx.constraintlayout.widget.ConstraintLayout>