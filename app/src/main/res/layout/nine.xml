<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ninenew"
    tools:context=".LevelNine">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="364dp"
        android:layout_height="413dp"
        android:layout_marginStart="180dp"
        android:layout_marginLeft="180dp"
        android:layout_marginEnd="187dp"
        android:layout_marginRight="187dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/wiz"
            android:layout_width="50dp"
            android:layout_height="74dp"
            android:layout_marginTop="295dp"
            app:srcCompat="@drawable/idle" />

        <ImageView
            android:id="@+id/obs1"
            android:layout_width="139dp"
            android:layout_height="50dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="340dp"
            app:srcCompat="@drawable/obs3" />

        <ImageView
            android:id="@+id/obs2"
            android:layout_width="146dp"
            android:layout_height="46dp"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="340dp"
            app:srcCompat="@drawable/obs3" />

        <ImageView
            android:id="@+id/obs3"
            android:layout_width="60dp"
            android:layout_height="87dp"
            android:layout_marginLeft="77dp"
            android:layout_marginTop="245dp"
            app:srcCompat="@drawable/obs2" />

        <ImageView
            android:id="@+id/obs4"
            android:layout_width="49dp"
            android:layout_height="90dp"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="220dp"
            app:srcCompat="@drawable/obs2" />

        <ImageView
            android:id="@+id/obs5"
            android:layout_width="49dp"
            android:layout_height="87dp"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="180dp"
            app:srcCompat="@drawable/obs2" />

        <ImageView
            android:id="@+id/plat1"
            android:layout_width="49dp"
            android:layout_height="57dp"
            android:layout_marginTop="360dp"
            android:src="@color/ic_launcher_background" />


        <ImageView
            android:id="@+id/plat2"
            android:layout_width="52dp"
            android:layout_height="169dp"
            android:layout_marginLeft="310dp"
            android:layout_marginTop="240dp"
            android:src="#FF5722" />

        <ImageView
            android:id="@+id/goal"
            android:layout_width="21dp"
            android:layout_height="57dp"
            android:layout_marginLeft="330dp"
            android:layout_marginTop="180dp"
            android:background="#00000000"
            android:src="@color/colorPrimary"/>
    </FrameLayout>

    <ImageView
        android:id="@+id/ileft"
        android:layout_width="80dp"
        android:layout_height="59dp"
        android:layout_marginTop="304dp"
        app:layout_constraintEnd_toStartOf="@+id/right"
        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/left" />

    <ImageView
        android:id="@+id/right"
        android:layout_width="90dp"
        android:layout_height="101dp"
        android:layout_marginTop="283dp"
        app:layout_constraintEnd_toStartOf="@+id/frameLayout"
        app:layout_constraintStart_toEndOf="@+id/left"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/right" />

    <ImageView
        android:id="@+id/up"
        android:layout_width="82dp"
        android:layout_height="83dp"
        android:layout_marginTop="280dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/frameLayout"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/up" />

    <ImageView
        android:id="@+id/down"
        android:layout_width="93dp"
        android:layout_height="86dp"
        android:layout_marginTop="276dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/up"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/down" />
</androidx.constraintlayout.widget.ConstraintLayout>